
html

include ../partials/head

body
  include ../partials/nav
  section.main main--home
    div.mdl-grid
      div.mdl-cell.mdl-cell--6-col.mdl-cell--middle
        div.main--home-card.mdl-card.mdl-shadow--2dp
          div.mdl-card__title.mdl-card--expand
            h2.mdl-card__title-text Browse by Authors

          div.mdl-card__media.main--home-card__media
            img(src="https://placehold.it/256x256", alt="").main--home-card__img

          div.mdl-card__actions.mdl-card--border
            a(href="/authors").mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect
              Get Started
              span.sr-only browsing by author

      <div class="mdl-cell mdl-cell--4-col mdl-cell--middle mdl-cell--stretch">
        <div class="main--home-card mdl-card mdl-shadow--2dp">
          <div class="mdl-card__title mdl-card--expand">
            <h2 class="mdl-card__title-text">Browse by Books</h2>
          </div>
          <div class="mdl-card__media main--home-card__media">
            <img src="https://placehold.it/256x256" alt="" class="main--home-card__img">
          </div>
          <div class="mdl-card__actions mdl-card--border">
            <a href="/books" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
              Get Started <span class="sr-only">browsing by books</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <% include ../partials/footer %>
</body>
</html>
